<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/graph.bubble.margin">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/graph.bubble.radius" />

            <solid android:color="@color/applicationWhite" />
            <size
                android:width="@dimen/graph.bubble.size.big"
                android:height="@dimen/graph.bubble.size.big" />

            <stroke
                android:width="@dimen/graph.bubble.stroke.small"
                android:color="@color/applicationBlue" />

        </shape>
    </item>
    <item
        android:left="@dimen/graph.bubble.margins.side"
        android:right="@dimen/graph.bubble.margins.side">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/graph.bubble.radius" />
            <solid android:color="@color/applicationWhite" />
            <stroke
                android:width="@dimen/graph.bubble.stroke.small"
                android:color="@color/applicationBlue" />
        </shape>
    </item>
    <item android:bottom="@dimen/graph.bubble.margin">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/graph.bubble.radius" />
            <solid android:color="@color/applicationWhite" />
            <size
                android:width="@dimen/graph.bubble.size.small"
                android:height="@dimen/graph.bubble.size.small" />
            <stroke
                android:width="@dimen/graph.bubble.stroke.big"
                android:color="@color/transparent" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/graph.bubble.cross.bottom"
        android:left="@dimen/graph.bubble.cross.side"
        android:right="@dimen/graph.bubble.cross.side">
        <shape android:shape="line">
            <stroke
                android:width="@dimen/graph.bubble.stroke.mini"
                android:color="@color/applicationBlue" />
        </shape>

    </item>
    <item
        android:bottom="@dimen/graph.bubble.cross.bottom"
        android:left="@dimen/graph.bubble.cross.side"
        android:right="@dimen/graph.bubble.cross.side">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/graph.bubble.stroke.mini"
                    android:color="@color/applicationBlue" />
            </shape>
        </rotate>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity.margin.horizontal"
    android:animateLayoutChanges="true"
    tools:context=".view.main.MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/chartGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <android.support.constraint.Guideline
        android:id="@+id/guideTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <TextView
        android:id="@+id/titleText"
        style="@style/Header.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main.title.noresult"
        app:layout_constraintTop_toBottomOf="@id/guideTop" />

    <TextView
        android:id="@+id/subTitleText"
        style="@style/General.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main.title.noresult.hint"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/graph.height"
        android:background="@color/chartBackrgroundBlue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/chartGuide" />

    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/graph.height"
        android:background="@color/chartBackrgroundBlue"
        android:src="@drawable/ic_measure"
        app:layout_constraintBottom_toTopOf="@id/chartGuide" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/graph.height"
        app:layout_constraintBottom_toTopOf="@id/chartGuide" />

    <Button
        android:id="@+id/newTestButton"
        style="@style/General.Blue.Button"
        android:layout_width="0dp"
        android:layout_height="@dimen/general.button.height.big"
        android:layout_marginBottom="@dimen/activity.margin.vertical"
        android:layout_marginEnd="@dimen/general.distance.small"
        android:layout_marginStart="@dimen/general.distance.small"
        android:text="@string/main.button.new.test"
        app:layout_constraintBottom_toTopOf="@id/resultButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/settingsButton"
        style="@style/Grey.Settings.Button"
        android:layout_width="@dimen/general.button.height.big"
        android:layout_height="@dimen/general.button.height.big"
        android:layout_marginBottom="@dimen/activity.margin.vertical"
        android:layout_marginEnd="@dimen/general.distance.small"
        android:layout_marginStart="@dimen/general.distance.small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/resultButton" />

    <Button
        android:id="@+id/resultButton"
        style="@style/General.Grey.Button"
        android:layout_width="0dp"
        android:layout_height="@dimen/general.button.height.big"
        android:layout_marginEnd="@dimen/general.distance.small"
        android:gravity="center"
        android:text="@string/main.button.result"
        app:layout_constraintLeft_toRightOf="@+id/settingsButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settingsButton" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/resultListContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline6">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewDailyResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgCloseResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/ic_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
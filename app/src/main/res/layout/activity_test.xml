<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
    android:layout_marginEnd="31dp"
    android:layout_marginStart="31dp">

    <FrameLayout
        android:id="@+id/testContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/barrier3">

    </FrameLayout>

    <Button
        android:id="@+id/testCancelCircleButton"
        style="@style/Grey.Cancel.Button"
        android:layout_width="60dp"
        android:layout_height="@dimen/general.button.height.big"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/testNavigationButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/testNavigationButton"
        style="@style/General.Green.Button"
        android:layout_width="0dp"
        android:layout_height="@dimen/general.button.height.big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/testCancelCircleButton" />

    <Button
        android:id="@+id/testCancelButton"
        style="@style/General.Grey.Button"
        android:layout_width="0dp"
        android:layout_height="@dimen/general.button.height.big"
        android:visibility="gone"
        android:text="@string/test.button.cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="testNavigationButton,testCancelCircleButton,testCancelButton" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/connect.scan.item.height"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/scanDeviceName"
        style="@style/General.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general.distance.20dp"
        android:layout_marginEnd="@dimen/general.distance.20dp"
        android:clickable="false"
        android:fontFamily="@font/nunito_black"
        android:gravity="center"
        android:lines="1"
        android:textSize="@dimen/font.size.large"
        app:layout_constraintBottom_toTopOf="@id/scanDeviceMac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:text="S1234" />

    <TextView
        android:id="@+id/scanDeviceMac"
        style="@style/General.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general.distance.20dp"
        android:layout_marginEnd="@dimen/general.distance.20dp"
        android:clickable="false"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scanDeviceName"
        tools:text="1B:2C:23:45:67:78" />
</androidx.constraintlayout.widget.ConstraintLayout>

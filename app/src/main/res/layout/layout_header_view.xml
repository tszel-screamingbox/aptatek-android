<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        style="@style/General.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/header.title.spacing.extra"
        android:lineSpacingMultiplier="0.8"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Header\nMultiline Long" />

    <Space
        android:id="@+id/header_space"
        android:layout_width="1dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/subtitle"/>

    <TextView
        android:id="@+id/subtitle"
        style="@style/General.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/header.title.spacing.extra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_space"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod. " />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general.distance.normal"
        android:gravity="center"
        android:text="@string/settings.title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font.size.xxlarge"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textViewFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general.distance.small"
        android:layout_marginTop="@dimen/general.distance.xbig"
        android:text="@string/settings.fingerprint.authentication"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font.size.xbig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general.distance.small"
        android:thumb="@drawable/switch_selector"
        android:track="@drawable/switch_track"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewFingerprint" />

    <View
        android:id="@+id/separatorFingerprint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general.distance.xxxxmini"
        android:layout_marginStart="@dimen/general.distance.small"
        android:layout_marginTop="@dimen/general.distance.mini"
        android:background="@color/applicationLightGray"
        app:layout_constraintStart_toStartOf="@+id/textViewFingerprint"
        app:layout_constraintTop_toBottomOf="@+id/switchFingerprint" />

    <TextView
        android:id="@+id/textViewFingerprintDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general.distance.small"
        android:layout_marginStart="@dimen/general.distance.small"
        android:layout_marginTop="@dimen/general.distance.xxmini"
        android:text="@string/settings.fingerprint.description"
        android:textColor="@color/applicationLightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separatorFingerprint" />

    <TextView
        android:id="@+id/textViewDailyReminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general.distance.small"
        android:layout_marginStart="@dimen/general.distance.small"
        android:layout_marginTop="@dimen/general.distance.small"
        android:drawableEnd="@drawable/ic_left_arrow"
        android:text="@string/settings.daily.reminders"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font.size.xbig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFingerprintDescription" />

    <View
        android:id="@+id/separatorDailyReminder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general.distance.xxxxmini"
        android:layout_marginStart="@dimen/general.distance.small"
        android:layout_marginTop="@dimen/general.distance.mini"
        android:background="@color/applicationLightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDailyReminders" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/general.distance.xxmini"
        android:text="@string/settings.daily.reminder.description"
        android:textColor="@color/applicationLightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorDailyReminder" />
</android.support.constraint.ConstraintLayout>
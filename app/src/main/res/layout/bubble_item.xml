<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/bubbleContainer"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/bubble_full_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/infoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:lines="2"
            android:minLines="2"
            android:textColor="@color/applicationWhite"
            android:textSize="@dimen/font.size.regular"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/badge"
            android:layout_width="@dimen/graph.bubble.size.small"
            android:layout_height="@dimen/graph.bubble.size.small"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/general.distance.xxmini"
            android:background="@drawable/bubble_full_white"
            android:elevation="@dimen/general.elevation"
            android:gravity="center"
            android:textColor="@color/applicationWhite"
            android:textSize="@dimen/font.size.mini"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
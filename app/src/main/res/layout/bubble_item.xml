<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/graph.item.size"
    android:layout_height="@dimen/graph.item.size"
    android:clipToPadding="false"
    android:padding="@dimen/general.distance.xxxmini">

    <com.aptatek.pkulab.widget.BubbleTextView
        android:id="@+id/bubble"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/badge"
        android:layout_width="@dimen/graph.bubble.size"
        android:layout_height="@dimen/graph.bubble.size"
        android:background="@drawable/bubble_badge"
        android:elevation="@dimen/general.elevation"
        android:gravity="center"
        android:textColor="@color/applicationWhite"
        android:textSize="@dimen/font.size.badge"
        android:textStyle="bold"
        android:visibility="visible"
        app:fontFamily="@font/nunito_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />
</androidx.constraintlayout.widget.ConstraintLayout>
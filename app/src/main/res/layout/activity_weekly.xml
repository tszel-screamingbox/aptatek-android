<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/general.distance.xxxsmall"
    android:layout_marginTop="@dimen/general.distance.xxxsmall">

    <TextView
        android:id="@+id/title"
        style="@style/General.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly.title"
        android:textSize="@dimen/font.size.weekly.title" />

    <TextView
        android:id="@+id/dateText"
        style="@style/General.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2018"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.github.mikephil.charting.charts.BubbleChart
        android:id="@+id/weeklyChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/general.distance.xxsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateText">
    </com.github.mikephil.charting.charts.BubbleChart>

    <android.support.constraint.Group
        android:id="@+id/emptyGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="playIcon, emptyTitle, emptySubtitle" />

    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_measure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/emptyTitle"
        style="@style/General.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly.empty.title"
        android:textSize="@dimen/font.size.weekly.title"
        app:layout_constraintTop_toBottomOf="@+id/playIcon" />

    <TextView
        android:id="@+id/emptySubtitle"
        style="@style/General.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly.empty.subtitle"
        app:layout_constraintTop_toBottomOf="@+id/emptyTitle" />

</android.support.constraint.ConstraintLayout>
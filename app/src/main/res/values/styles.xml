<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="fontFamily">@font/nunito_black</item>
    </style>


    <style name="General.Transparent.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">@dimen/general.distance.xxsmall</item>
        <item name="android:paddingBottom">@dimen/general.distance.xxsmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/applicationSolidGray</item>
        <item name="android:textSize">@dimen/font.size.large</item>
    </style>

    <style name="General.Rounded.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@drawable/ripple_white_button</item>
        <item name="android:paddingTop">@dimen/general.distance.xxsmall</item>
        <item name="android:paddingBottom">@dimen/general.distance.xxsmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/general.elevation</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/applicationSolidGray</item>
        <item name="android:textSize">@dimen/font.size.large</item>
    </style>

    <style name="General.Rounded.Gray.Button" parent="General.Rounded.Button">
        <item name="android:background">@drawable/ripple_grey_button</item>
    </style>

    <style name="General.Rounded.Blue.Button" parent="General.Rounded.Button">
        <item name="android:background">@drawable/ripple_blue_button</item>
        <item name="android:textColor">@color/applicationWhite</item>
    </style>

    <style name="Test.Cancel.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/general.distance.xmini</item>
        <item name="android:paddingBottom">@dimen/general.distance.xmini</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textColor">@color/applicationMediumGray</item>
        <item name="android:textSize">@dimen/font.size.large</item>
    </style>

    <style name="Test.Next.Button" parent="Test.Cancel.Button">
        <item name="android:textColor">@color/testPageIndicatorBlue</item>
    </style>

    <style name="Test.Circle.Cancel.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/cancel_button_background</item>
        <item name="android:width">@dimen/general.button.height</item>
        <item name="android:height">@dimen/general.button.height</item>
        <item name="android:elevation">@dimen/general.elevation</item>
    </style>

    <style name="Test.Alert.Text" parent="General.Text">
        <item name="android:textColor">@color/applicationWhite</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font.size.xbig</item>
    </style>

    <style name="Test.Progress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/testPageIndicatorBlue</item>
    </style>

    <style name="Grey.Settings.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/settings_button_background</item>
        <item name="android:layout_width">@dimen/general.button.height</item>
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:elevation">@dimen/general.elevation</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/applicationSolidGray</item>
        <item name="android:textSize">@dimen/font.size.normal</item>
    </style>

    <style name="General.Text.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/applicationSolidGray</item>
        <item name="android:textSize">@dimen/font.size.normal</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Ripple.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/ripple_white_button</item>
    </style>

    <style name="Dial.Button" parent="Ripple.Button">
        <item name="android:textColor">@color/dialButtonGrey</item>
        <item name="android:textSize">@dimen/font.size.xlarge</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:layout_margin">@dimen/general.distance.xxxxmini</item>
    </style>

    <style name="Header.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textSize">@dimen/font.size.xxlarge</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="General.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationMediumGray</item>
        <item name="android:textSize">@dimen/font.size.xbig</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="General.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="General.TimePicker" parent="android:Widget.Material.Light.TimePicker" tools:targetApi="lollipop">
        <item name="android:timePickerMode" tools:targetApi="lollipop">clock</item>
        <item name="android:numbersSelectorColor">@color/applicationTimePickerSelector</item>
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:headerTimeTextAppearance">@style/General.HeaderTextStyle</item>
        <item name="android:textAppearance">@style/General.ClockTextStyle</item>
    </style>

    <style name="General.HeaderTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/time_picker_header_color_selector</item>
    </style>

    <style name="General.ClockTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/applicationLightGray</item>
    </style>

    <style name="Wetting.Countdown" parent="General.Text">
        <item name="android:textColor">@color/applicationGreen</item>
        <item name="android:textSize">@dimen/font.size.wetting</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="General.Title" parent="General.Text">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textSize">@dimen/font.size.xxlarge</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Parental.Input" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">@dimen/general.distance.xxsmall</item>
        <item name="android:paddingBottom">@dimen/general.distance.xxsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/applicationSolidGray</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">@dimen/font.size.large</item>
        <item name="android:background">@drawable/ripple_grey_button</item>
    </style>

    <style name="Parental.Keypad.Next" parent="Dial.Button">
        <item name="android:textColor">@color/buttonBlue</item>
        <item name="android:textSize">@dimen/font.size.xlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Parental.Dialog.DatePicker" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/Parental.DatePicker</item>
    </style>

    <style name="Parental.DatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="RangeInfo.Row.Value" parent="General.Title">
        <item name="android:textSize">@dimen/font.size.xlarge</item>
        <item name="android:textColor">@color/applicationWhite</item>
    </style>

    <style name="RangeInfo.Row.Name" parent="General.Text">
        <item name="android:textSize">@dimen/font.size.big</item>
        <item name="android:textColor">@color/applicationWhite</item>
    </style>

    <style name="Settings.Row.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textSize">@dimen/font.size.xbig</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="Settings.Row.Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationLightGray</item>
        <item name="android:textSize">@dimen/font.size.normal</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="Settings.Range.Label" parent="General.Text">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/font.size.xbig</item>
        <item name="android:textColor">@color/applicationGray</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="Settings.Range.Description" parent="Settings.Range.Label">
        <item name="android:textSize">@dimen/font.size.normal</item>
        <item name="android:textColor">@color/applicationTransparentGray</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="Settings.Range.Label.Active">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="Settings.Range.Units.Radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/applicationBlack</item>
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DefaultDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:fontFamily">@font/nunito_black</item>
    </style>

    <style name="ReminderSnoozeDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@color/applicationLightGray</item>
    </style>

</resources>

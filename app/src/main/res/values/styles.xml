<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="General.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@drawable/general_button_background</item>
        <item name="android:paddingTop">@dimen/general.distance.xxsmall</item>
        <item name="android:paddingBottom">@dimen/general.distance.xxsmall</item>
        <item name="android:textColor">@color/applicationWhite</item>
    </style>
</resources>

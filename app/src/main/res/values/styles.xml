<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="General.Blue.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@drawable/general_button_background</item>
        <item name="android:paddingTop">@dimen/general.distance.xxsmall</item>
        <item name="android:paddingBottom">@dimen/general.distance.xxsmall</item>
        <item name="android:textColor">@color/applicationWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font.size.large</item>
    </style>

    <style name="General.Grey.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@drawable/general_button_grey_background</item>
        <item name="android:paddingTop">@dimen/general.distance.xxsmall</item>
        <item name="android:paddingBottom">@dimen/general.distance.xxsmall</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/applicationWhite</item>
        <item name="android:textSize">@dimen/font.size.large</item>
    </style>

    <style name="Grey.Cancel.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/cancel_button_background</item>
        <item name="android:layout_width">@dimen/general.button.height</item>
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/applicationWhite</item>
        <item name="android:textSize">@dimen/font.size.normal</item>
    </style>

    <style name="Grey.Settings.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/settings_button_background</item>
        <item name="android:layout_width">@dimen/general.button.height</item>
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/applicationWhite</item>
        <item name="android:textSize">@dimen/font.size.normal</item>
    </style>

    <style name="General.Text.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/applicationGray</item>
        <item name="android:textSize">@dimen/font.size.normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dial.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/applicationWhite</item>
        <item name="android:textColor">@color/dialButtonGrey</item>
        <item name="android:textSize">@dimen/font.size.xlarge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/general.distance.xxxxmini</item>
    </style>

    <style name="General.Empty.Background" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/general.button.height</item>
        <item name="android:background">@drawable/empty_background</item>
        <item name="android:textColor">@color/applicationGray</item>
        <item name="android:textSize">@dimen/font.size.xxbig</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textSize">@dimen/font.size.xxlarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="General.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textSize">@dimen/font.size.xxbig</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">@dimen/alpha.general.text</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="General.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="General.TimePicker" parent="android:Widget.Material.Light.TimePicker" tools:targetApi="lollipop">
        <item name="android:timePickerMode" tools:targetApi="lollipop">clock</item>
        <item name="android:numbersSelectorColor">@color/applicationTimePickerSelector</item>
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:headerTimeTextAppearance">@style/General.HeaderTextStyle</item>
        <item name="android:textAppearance">@style/General.ClockTextStyle</item>
    </style>

    <style name="General.HeaderTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/time_picker_header_color_selector</item>
    </style>

    <style name="General.ClockTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/applicationLightGray</item>
    </style>

    <style name="Incubation.Green.Text" parent="General.Text">
        <item name="android:textColor">@color/applicationGreen</item>
        <item name="android:textSize">@dimen/font.size.incubation</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">@dimen/alpha.general.full</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="General.Title" parent="General.Text">
        <item name="android:alpha">@dimen/alpha.general.full</item>
        <item name="android:textSize">@dimen/font.size.xxlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Parental.Input" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">@dimen/general.distance.xxsmall</item>
        <item name="android:paddingBottom">@dimen/general.distance.xxsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font.size.large</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="Parental.Keypad.Next" parent="Dial.Button">
        <item name="android:textColor">@color/applicationGreen</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Parental.Dialog.DatePicker" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:datePickerStyle">@style/Parental.DatePicker</item>
    </style>

    <style name="Parental.DatePicker" parent="android:Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="RangeInfo.VeryHigh" parent="General.Title">
        <item name="android:textSize">@dimen/font.size.xlarge</item>
        <item name="android:textColor">@color/pkuLevelVeryHigh</item>
    </style>

    <style name="RangeInfo.High" parent="General.Title">
        <item name="android:textSize">@dimen/font.size.xlarge</item>
        <item name="android:textColor">@color/pkuLevelHigh</item>
    </style>
    <style name="RangeInfo.Normal" parent="General.Title">
        <item name="android:textSize">@dimen/font.size.xxlarge</item>
        <item name="android:textColor">@color/pkuLevelNormal</item>
    </style>
    <style name="RangeInfo.Low" parent="General.Title">
        <item name="android:textSize">@dimen/font.size.xlarge</item>
        <item name="android:textColor">@color/pkuLevelLow</item>
    </style>

    <style name="Settings.Row.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:textSize">@dimen/font.size.xbig</item>
    </style>

    <style name="Settings.Row.Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/applicationLightGray</item>
        <item name="android:textSize">@dimen/font.size.normal</item>
    </style>

    <style name="Settings.Range.Label" parent="General.Text">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/font.size.xbig</item>
        <item name="android:textColor">@color/applicationGray</item>
    </style>

    <style name="Settings.Range.Description" parent="Settings.Range.Label">
        <item name="android:textSize">@dimen/font.size.normal</item>
    </style>

    <style name="Settings.Range.Label.Active">
        <item name="android:textColor">@color/applicationBlack</item>
        <item name="android:alpha">@dimen/alpha.general.full</item>
    </style>

    <style name="Settings.Range.Units.Radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/pkuLevelVeryHigh</item>
        <item name="android:textColor">@color/applicationLightGray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
